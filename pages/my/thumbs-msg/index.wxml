<!--pages/my/thumbs-msg/index.wxml-->
<template name="body">
  <view class="body-item">
    <image class="body-item_img" lazy-load="{{true}}" mode="aspectFill" src="/static/circle_card.jpg"></image>
    <view class="body-item_content">
      <view class="title">复仇者联盟强势回归活动已经开启！</view>
      <view class="desc">复仇者联盟是什么什么什么</view>
    </view>
  </view>
</template>

<template name="msg">
  <view class="msg-item">
    <view class="msg-item_head">
      <image class="avatar" lazy-load="{{true}}" mode="aspectFill" src="{{userInfo.avatar_url}}"></image>
      <view class="userinfo">
        <view class="nickname">{{userInfo.nickname}}</view>
        <view class="time">2019-04-12</view>
      </view>
    </view>
    <text class="msg-item_content">赞了我</text>
    <template is="body"/>
  </view>
</template>

<block wx:for="{{msgs}}" wx:key="{{index}}">
  <template is="msg" data="{{userInfo, item}}"/>
</block>
