/* pages/my/activity-rewards/index.wxss */
/* template */
.activity-item {
  display: flex;
  margin: 20rpx 30rpx 0 30rpx;
  border-radius: 30rpx;
  overflow: hidden;
  box-shadow: 0px 1px 5px gainsboro;
  height: 160rpx;
}

.activity-item.disabled {
  filter: grayscale(0.9);
}

.activity-item__left {
  /* flex: 2; */
  width: 225rpx;
  height: 100%;
  border-radius: 30rpx;
}

.activity-item__middle {
  flex: 2;
  padding: 20rpx;
  line-height: 30rpx;
}

.activity-item__middle .title {
  font-size: 28rpx;
}

.activity-item__middle .desc {
  font-size: 20rpx;
}

.activity-item__middle .num {
  font-size: 18rpx;
}

.activity-item__middle .time {
  font-size: 18rpx;
  color: #979797;
  margin-top: 20rpx;
}

.activity-item__middle .hot .fire {
  margin-top: 10rpx;
  margin-right: 5rpx;
  height: 26rpx;
  width: 20rpx;
}

.activity-item__right {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10rpx 0;
}

.activity-item .btn {
  line-height: 50rpx;
  padding: 0 10rpx;
}

/* page */