/* pages/my/system-msg/index.wxss */
.msg-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
  overflow: hidden;
  background: #f8f8f8;
}

.msg-item:first-child {
  margin-top: 30rpx;
}

.msg-item:last-child {
  margin-bottom: 30rpx;
}

.msg-item .msg-item_img {
  width: 110rpx;
  height: 120rpx;
  border-radius: 5rpx;
}

.msg-item .msg-item_content {

}

.msg-item_content .title {
  font-size: 26rpx;
}

.msg-item_content .desc {
  margin-top: 10rpx;
  font-size: 20rpx;
  color: #979797;
}

.msg-item .time {
  font-size: 18rpx;
  padding-bottom: 30rpx;
  padding-right: 10rpx;
}