<view class="container my">

  <!-- 我的 头 -->
  <view class="my_header">
    <view class="modal-bg"></view>
    <!-- 个人信息背景图 -->
    <image lazy-load="{{true}}" class="my_header_bg" src="{{ userInfo.background || '/static/default_my_bg.png'}}"></image>

    <!-- 个人信息 -->
    <view class="my_header-info">
      <view class="my_header-info_user">
        <view class="my_header-info_left">
          <image lazy-load="{{true}}" class="avatar my_header-info_avatar" src="{{ userInfo.avatar_url || '/static/default_avatar.jpg'}}"></image>
          <view class="text-14">{{ userInfo.nickname }}</view>
          <view class="text-8">等级1</view>
        </view>
        <view class="my_header-info_center"></view>
        <view class="my_header-info_right">
          <!-- <follow-btn text="关注"></follow-btn> -->
        </view>
      </view>

      <!-- 礼物、被关注、关注 数量 -->
      <view class="my_header-info_items">
        <view class="my_header-info_item">
          <view class="text-15">0</view>
          <view class="text-10">礼物</view>
        </view>
        <view class="my_header-info_item">
          <view class="text-15">{{userInfo.be_follow_num}}</view>
          <view class="text-10">被关注</view>
        </view>
        <view class="my_header-info_item">
          <view class="text-15">{{userInfo.follow_num}}</view>
          <view class="text-10">关注</view>
        </view>
        <view></view>
      </view>
    </view>
  </view>

  <!-- 我的 腿儿 -->
  <view class="my_footer">
    <view class="my_footer-tab-container">
      <gu-tab tabs="{{tabs}}" width="50%" bindselectmytab="myTabHandler"></gu-tab>
      <view class="light-gray-bottom"></view>
      <view wx:if="{{tabIndex == 0}}">
        <view class="home-gorund-item gray-buttom" wx:for="{{myEvents}}" wx:key="{{index}}">
        <event-card event="{{item}}" type="events"></event-card>
      </view>
      </view>
    </view>
  </view>
</view>
<custom-tab-bar selected="{{1}}"></custom-tab-bar>
