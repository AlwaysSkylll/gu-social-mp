.gu-permission-bg {
  height: 100vh;
  width: 100vw;
  z-index: 1;
}

.gu-permission-body {
  box-sizing: border-box;
  position: absolute;
  left: 30rpx;
  right: 30rpx;
  bottom: 0;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 10;
  text-align: center;
}

.gu-permission-content {
  margin-top: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #777777;
  line-height: 50rpx;
}

.gu-permission-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 40rpx auto;
  border-radius: 120rpx;
  overflow: hidden;
}

