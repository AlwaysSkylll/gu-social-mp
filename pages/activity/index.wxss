/* pages/activity/index.wxss */
.topic-detail {

}

.topic-detail_bg {
  position: relative;
  width: 100vw;
  height: 420rpx;
}

.topic-detail_bg .detail_bg-img {
  width: 100%;
  height: 100%;
}

.topic-detail_bg .status-text{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  color: #ffffff;
  display: inline-block;
  border-radius: 5rpx;
}

.status-text.ready {
  background: #5cd4ea;
}

.status-text.going {
  background: #e8204f;
}

.status-text.end {
  background: gray;
}

.topic-detail_share {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 100rpx;
  justify-content: center;
  align-items: center;
  background: transparent;
  padding: 0;
  line-height: 0;
  border-radius: 0;
}

.topic-detail_share::after {
  border: none;
  border-radius: 0;
}

.topic-detail_share-icon {
  height: 40rpx;
  width: 40rpx;
  background:#000;
  padding:10rpx;
  border-radius:40rpx;
  opacity:0.6;
}

.topic-detail_info {
  box-sizing: border-box;
  position: relative;
  line-height: 30rpx;
  font-size: 30rpx;
  padding: 35rpx 30rpx 45rpx 30rpx;
  color: #000000;
}

.info-title {
  display: inline-block;
  padding: 35rpx 30rpx 10rpx 30rpx;
  font-size: 30rpx;
}

.topic-detail_desc {
  display: block;
  padding: 30rpx;
  font-size: 26rpx;
  line-height: 38rpx;
}

.info-time {
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
  color: #979797;
  font-size: 22rpx;
}

.topic-detail_datas {
  display: flex;
  align-items: center;
  line-height: 24rpx;
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  font-size: 22rpx;
  color: #979797;
}

.topic-detail_datas .data-icon {
  width: 25rpx;
  height: 22rpx;
  margin: 0 10rpx 0 20rpx;
}

.topic-detail_datas .data-icon.fire {
  width: 27rpx;
  height: 18rpx;
}
.topic-detail_datas .data-icon.share {

}
.topic-detail_datas .data-icon.comment {
  width: 25rpx;
}

.share-choice {
  position: absolute;
  box-sizing: border-box;
  padding-top: 30rpx;
  width: 100%;
  height: 290rpx;
  bottom: -290rpx;
  background: #fff;
  transition: all 0.3s ease-in-out 0s;
  font-size: 28rpx;
}

.show .share-choice {
  bottom: 0;
  transition: all 0.3s ease-in-out 0s;
}

.share-chioce_item {
  padding: 30rpx 30rpx;
  width: 90rpx;
  box-sizing: unset;
  font-size: 22rpx;
  border-radius: 0;
  background:transparent;
  border: none;
  text-align: center;
  line-height: 30rpx;
  overflow: auto;
  float:left;
}

.share-chioce_item::after {
  border: none;
  border-radius: 0;
}


.share-chioce_item image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 30rpx;
}

.user-item {
  display: flex;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
  line-height: 30rpx;
}

.user-item .left-content {
  flex: 1;
}

.user-item .middle-content {
  flex: 4;  
}

.user-item .right-content {
  flex: 2;  
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.user-item .right-content .fire {
  display: block;
  margin-right: 8rpx;
  height: 36rpx;
  width: 26rpx;
}

.user-item .right-content .fire:nth-last-child(2) {
  margin-right: 16rpx;
}

.red {
  color: red;
}