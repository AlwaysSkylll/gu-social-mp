/* pages/circle-list/index.wxss */
.circle-list {
  margin-top: 25rpx;
}

.circle-list_item {
  box-sizing: border-box;
  margin-bottom: 50rpx;
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 160rpx;
  border-radius: 30rpx;
  border-top-left-radius: 0;
  overflow: hidden;
  box-shadow: -1px 1px 5px gainsboro;
}

.circle-list_item .topic {
  font-size: 12px;
  color: #000000;
}

.circle-list_item .topic-content {
  font-size: 9px;
  color: #000000;
  line-height: 15px;
}

.circle-list_item .topic-desc {
  font-size: 9px;
  color: #979797;
  line-height: 15px;
}

.circle-list_item .topic-bg {
  width: 100%;
  height: 100%;
}

.item-left {
  padding: 30rpx;
  flex: 8;
}

.item-right {
  flex: 5;
  border-bottom-left-radius: 30rpx;  
  overflow: hidden;
}

