/* pages/publish-topic-select/index.wxss */
.text-overflow {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}

.topic-list {
  margin: 30rpx;
  height: 100%;
  overflow: scroll;
}

.topic-item {
  box-sizing:content-box;
  display: flex;
  width: 100%;
  height: 120rpx;
  margin-top: 20rpx;
  border-radius: 5rpx;
  background: #f8f8f8;
  align-items: center;
}

.topic-item:first-child {
  margin-top: 0;
}

.topic-bg {
  width: 100rpx;
  height: 100rpx;
  flex:0 0 100rpx;
}

.topic-title {
  line-height: 50rpx;
  font-size: 24rpx;
}

.topic-desc {
  max-width: 100%;
  font-size: 18rpx;
  color: #979797;
}

.topic-middle {
  box-sizing: border-box;
  padding: 0 20rpx;
  max-width: 500rpx;
  display: flex;
  flex: 1;
  flex-direction: column;
  text-align: left;
}

.topic-right {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-items: center;
  flex:0 0 60rpx;
  font-size: 20rpx;
  color: #979797;
}
