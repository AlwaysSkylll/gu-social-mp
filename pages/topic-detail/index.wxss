/* pages/topic-detail/index.wxss */
.topic-detail {

}

.topic-detail_bg {
  width: 100vw;
  height: 420rpx;
}

.topic-detail_share {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 100rpx;
  justify-content: center;
  align-items: center;
  background: transparent;
  padding: 0;
  line-height: 0;
  border-radius: 0;
}

.topic-detail_share::after {
  border: none;
  border-radius: 0;
}

.topic-detail_share-icon {
  height: 35rpx;
  width: 40rpx;
}

.topic-detail_info {
  box-sizing: border-box;
  position: relative;
  min-height: 160rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  padding: 35rpx 30rpx 45rpx 30rpx;
  color: #000000;
}

.topic-detail_info .info-title {
  font-weight: bold;
  line-height: 40rpx;
}

.topic-detail_desc {
  padding: 30rpx;
  font-size: 26rpx;
  line-height: 38rpx;
}

.info-time {
  position: absolute;
  bottom: 10rpx;
  left: 30rpx;
  color: #979797;
  font-size: 22rpx;
}

.topic-detail_datas {
  display: flex;
  align-items: center;
  line-height: 24rpx;
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
  font-size: 22rpx;
  color: #979797;
}

.topic-detail_datas .data-icon {
  width: 25rpx;
  height: 22rpx;
  margin: 0 10rpx 0 20rpx;
}

.topic-detail_datas .data-icon.fire {
  width: 27rpx;
  height: 18rpx;
}
.topic-detail_datas .data-icon.share {

}
.topic-detail_datas .data-icon.comment {
  width: 25rpx;
}

.share-choice {
  position: absolute;
  box-sizing: border-box;
  padding-top: 30rpx;
  width: 100%;
  height: 290rpx;
  bottom: -290rpx;
  background: #fff;
  transition: all 0.3s ease-in-out 0s;
  font-size: 28rpx;
}

.show .share-choice {
  bottom: 0;
  transition: all 0.3s ease-in-out 0s;
}

.share-chioce_item {
  padding: 30rpx 30rpx;
  width: 90rpx;
  box-sizing: unset;
  font-size: 22rpx;
  border-radius: 0;
  background:transparent;
  border: none;
  text-align: center;
  line-height: 30rpx;
  overflow: auto;
  float:left;
}

.share-chioce_item::after {
  border: none;
  border-radius: 0;
}


.share-chioce_item image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 30rpx;
}