/* pages/publish-event/index.wxss */
.text-overflow {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}

.publish {
  padding-top: 30rpx;
}

.publish_topic {
  margin: 0 30rpx;
  font-size: 14px;
  line-height: 50rpx;
  box-sizing: border-box;
  padding: 10rpx 30rpx;
  border: 1rpx solid #c9c9c9;
  border-radius: 5rpx;
}

.publish_desc {
  position: relative;
  box-sizing: border-box;
  margin: 30rpx;
  border: 1rpx solid #c9c9c9;
  border-radius: 5rpx;
  padding: 30rpx;
  font-size: 14px;
  overflow: hidden;
}

.publish_desc-area {
  width: 100%;
}

.preview-img {
  width: 64rpx;
  height: 64rpx;
}

/* .preview-img-item.full-width {
  padding: 0 !important;
} */

/* .preview-img-item.full-width .preview-img {
