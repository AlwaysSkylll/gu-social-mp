  height: 100%;
} */

.preview-img-list {
  text-align: center
}

.preview-img-item {
  display: inline-block;
  border: 1rpx dashed #c9c9c9;
  box-sizing: border-box;
  padding: 5rpx 25rpx;
  /* height: 106rpx;
  width: 84rpx; */
  border-radius: 5rpx;
  margin: 0 15rpx;
}

.preview-img {

}

.publish-btn {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background: #5cd4ea;
  line-height: 90rpx;
  font-size: 14px;
  text-align: center;
  color: #ffffff;
}

.publish-btn.disabled {
  background: #979797
}

.publish-label {
  float: right;
  padding: 5rpx 15rpx;
  margin-top: 30rpx;
  font-size: 10px;
  color: #ffffff;
  background: #5cd4ea;
  border-radius: 10rpx;
  max-width: 100%;
}

.topic-list-container {
  display: inline-block;
  width: 675rpx;
  background: #ffffff;
}

.location-label {
  float: left;
  max-width: 100%;
  margin: 0 10rpx 0 30rpx;
  background: #e5e5e5;
  padding: 10rpx 20rpx;
  border-radius: 25rpx;
  color: #979797;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-icon {
  width: 15rpx;
  height: 20rpx;
  margin-right: 10rpx;
}