/* pages/components/mini-circle-card/index.wxss */
.mini-circle-card {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border: 2rpx solid #E5E5E5;
  height: 100%;
  text-align: center;
  overflow: hidden;
}

.mini-circle-card_hovered {
  opacity: 0.7
}

.mini-circle-card_img {
  width: 100%;
  flex: 6;
}

.mini-card_info {
  box-sizing: border-box;
  /* margin-top: 30rpx; */
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  flex: 6;
}
.mini-circle-card .title {
  max-width: 100%;
  line-height: 26rpx;
  font-size: 26rpx;
}
.mini-circle-card .desc {
  max-width: 100%;
  line-height: 12rpx;
  font-size: 22rpx;
  color: #979797;
}
.mini-circle-card .btn {
  padding:0 9rpx;
  border-radius: 5rpx;
  border: 2rpx solid #5cd4ea;
  color: #5cd4ea;
  font-size: 18rpx;
  line-height: 36rpx;
}
.btn_join-img {
  vertical-align: middle;
  padding: 4rpx;
  margin: 0 4rpx;
  width: 18rpx;
  height: 18rpx;
}

.text-overflow {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}