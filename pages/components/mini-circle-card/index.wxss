/* pages/components/mini-circle-card/index.wxss */
.mini-circle-card {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border: 2rpx solid #E5E5E5;
  height: 100%;
  text-align: center;
  overflow: hidden;
}
.mini-circle-card_img {
  width: 100%;
  flex: 6;
}

.mini-card_info {
  box-sizing: border-box;
  /* margin-top: 30rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 6;
}
.mini-circle-card .title {
  flex: 2;
  line-height: 16px;
  font-size: 11px;
}
.mini-circle-card .desc {
  flex: 2;
  line-height: 16px;
  font-size: 9px;
  color: #979797;
}
.mini-circle-card .btn {
  flex: 2;
  padding:0 10rpx;
  border-radius: 5rpx;
  border: 2rpx solid #5cd4ea;
  color: #5cd4ea;
  font-size: 9px;
  line-height: 16px;
}
.btn_join-img {
  width: 18rpx;
  height: 18rpx;
}