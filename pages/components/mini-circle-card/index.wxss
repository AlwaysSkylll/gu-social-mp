/* pages/components/mini-circle-card/index.wxss */
.mini-circle-card {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  border: 2rpx solid #E5E5E5;
  height: 100%;
  text-align: center;
  overflow: hidden;
}

.mini-circle-card_hovered {
  opacity: 0.7
}

.mini-circle-card_img {
  width: 100%;
  flex: 6;
}

.mini-card_info {
  box-sizing: border-box;
  /* margin-top: 30rpx; */
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
  flex: 6;
}
.mini-circle-card .title {
  line-height: 11px;
  font-size: 11px;
}
.mini-circle-card .desc {
  line-height: 9px;
  font-size: 9px;
  color: #979797;
}
.mini-circle-card .btn {
  padding:0 10rpx;
  border-radius: 5rpx;
  border: 2rpx solid #5cd4ea;
  color: #5cd4ea;
  font-size: 9px;
  line-height: 17.5px;
}
.btn_join-img {
  vertical-align: middle;
  padding: 2px;
  margin: 0 4rpx;
  width: 18rpx;
  height: 18rpx;
}