<!--pages/components/gu-tab/index.wxml-->
<view class="gu-tab {{center ? 'center' : ''}}" style="width: {{width}}">
  <view wx:for="{{tabs}}" wx:key="{{index}}" class="gu-tab-item {{selected == index ? 'active' : ''}}" data-index="{{index}}" bindtap="selectTab">
    <view class="gu-tab-name" style="font-size: {{fontSize}}px;">{{item}}</view>
    <view class="gu-tab-border"></view>
  </view>
</view>
