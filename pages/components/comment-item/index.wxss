/* pages/components/comment-item/index.wxss */
.text-overflow {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}

.comment-item {
  padding: 20rpx 0;
}

.comment-item {
  border-bottom: 1px solid #f5f5f5;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 1rpx solid #FFFFFF;
}

.event-card_user {
  position: relative;
}

.event-card_user .avatar {
  position: absolute;
  left: 0;
  top: 0;
}

.thumbsup-info {
  display: flex;
  align-items: center;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 11px;
}

.thumbsup-info.active {
  color: #5cd4ea;
}

.thumbsup-icon {
  margin:0 20rpx 0 30rpx;
  width:30rpx;
  height:30rpx;
}

.event-card_ground-info {
  box-sizing: border-box;
  padding: 0 100rpx;
  min-height: 120rpx;
}

.event-card_info1 {
  line-height: 12px;
  box-sizing: border-box;
  padding-top: 30rpx;
}

.event-card_info1 text {
  margin-left: 20rpx;
  font-size: 10px;
}

.event-card_info1 text:first-child {
  font-size: 14px;
}

.event-card_info2 {
  line-height: 16px;
  font-size: 10px;
}

.event-card_info2 text {
  margin-left: 15rpx;
  color: #979797;
}

.event-card_info2 text:first-child {
  margin-left: 20rpx;
}

.event-card_info2 text:first-child {

}

.event-card_info2 text:last-child {
  color: #5cd4ea;
}

.comment-item_content {
  padding: 0 120rpx;
  font-size: 13px;
}
