/* pages/components/mini-topic-card/index.wxss */
.mini-topic-card {
  width: 100%;
  height: 100%;
  position: relative;
}

.mini-topic-card_hovered {
  opacity: 0.7;
}

.mini-topic-card_img {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.mini-topic-card_title {
  position: absolute;
  bottom: 0;
  background: #FFFFFF;
  opacity: 0.5;
  height: 50rpx;
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  align-items: center;
  text-align: right;
  font-size: 14px;
  line-height: 50rpx;
}

.text-overflow {
  text-overflow:ellipsis;
  overflow:hidden;
  white-space:nowrap;
}