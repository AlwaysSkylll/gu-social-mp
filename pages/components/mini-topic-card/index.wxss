/* pages/components/mini-topic-card/index.wxss */
.mini-topic-card {
  width: 100%;
  height: 100%;
  position: relative;
}

.mini-topic-card_hovered {
  opacity: 0.7;
}

.mini-topic-card_img {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.mini-topic-card_title {
  position: absolute;
  bottom: 0;
  background: #FFFFFF;
  opacity: 0.5;
  height: 45rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mini-topic-card_title text {
  font-size: 12px;
}