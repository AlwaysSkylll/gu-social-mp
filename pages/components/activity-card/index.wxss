/* pages/components/activity-card/index.wxss */
.activity-card {
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.activity-card_title {
  display: flex;
  margin-top: 20rpx; 
  font-size: 30rpx;
  color: #000000;
  padding-right: 100rpx;
  align-items: center;
}

.activity-card_line .fire {
  height: 26rpx;
  width: 20rpx;
  margin-right: 4rpx;
}

.activity-card_line .gift {
  height: 28rpx;
  width: 28rpx;
  margin-right: 4rpx;
}

.activity-card_line.objection .btn {
  background-color: #979797;
}

.activity-card_num {
  display: flex;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 22rpx;
  color: #e8204f;
  align-items: center;
}

.activity-card_sub-info {
  margin-top: 15rpx; 
  font-size: 20rpx;
  color: #979797;
}

.activity-card_line {
  position: relative;
}

.activity-card_line.objection {
  filter:grayscale(1);
  opacity:0.5;
}

.activity-card_img-container {
  position: relative;
  height: 380rpx;
  overflow: hidden;
}

.activity-card_img {
  border-radius: 5rpx;
  width: 100%;
  height: 100%;
}

.activity-card_img-container .status-text {
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 26rpx;
  padding: 5rpx 10rpx;
  color: #ffffff;
  display: inline-block;
  border-radius: 5rpx;
}

.status-text.ready {
  background: #5cd4ea;
}

.status-text.going {
  background: #e8204f;
}

.status-text.end {
  background: gray;
}

.btn {
  box-sizing: border-box;
  display: inline-block;
  padding: 10rpx 15rpx;
  border-radius: 10rpx;
  color: #FFFFFF;
  text-align: center;
  font-size: 26rpx;
  background-color: #5cd4ea;
}

.btn.ready {
  background: #5cd4ea;
}

.btn.going {
  background: #e8204f;
}

.btn.end {
  background: gray;
}